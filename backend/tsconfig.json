{
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "module": "CommonJS",
    "target": "es2018",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "*"
      ],
      "@MongoDB/*": [
        "./MongoDB/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}